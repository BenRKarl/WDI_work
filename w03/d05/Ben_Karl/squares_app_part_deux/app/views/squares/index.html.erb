<h1>Here are all our squares!</h1>

<form action="/squares/new" method="get">
  <input type="submit" value="Create new square">
</form>

<% @squares.each do |square| %>
  <div class="feature" style="
    height: <%= square.side_length %>em;
    width: <%= square.side_length %>em;
    border-radius: <%= square.border_radius %>%;
    background-color: <%= square.color %>
    ">
    <a href="squares/<%= square.id %>"></a>
  </div>
<% end %>
