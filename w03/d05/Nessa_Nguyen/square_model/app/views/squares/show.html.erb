
<h3><a href="/squares">Back to all squares</a></h3>

<h2>Square <%= @square.id %></h2>
  <div style="width: <%= @square.side_length %>px; 
              height: <%= @square.side_length %>px; 
              border-radius: <%= @square.border_radius %>px; 
              background-color: <%= @square.color %>;">
  </div>

  <a href="/squares/<%= @square.id %>/edit">
    <button>Edit</button>
  </a>

  <form action="/squares/<%= @square.id %>/destroy" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="Submit" value="Delete">
  </form>  
