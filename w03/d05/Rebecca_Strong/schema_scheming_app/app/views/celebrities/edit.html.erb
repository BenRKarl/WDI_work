<h2>Edit a Celebrity</h2>

<form action="/celebrities/<%= @celebrity.id %>" method='post'>
  <input type="hidden" name="_method" value="put">
  <%= token_tag %>
  <input type="text" name='celebrity[celebrityname]' value='<%= @celebrity.celebrityname %>'>
  <input type="text" name='age[celebrityage]' value='<%= @celebrity.celebrityage %>'>
  <input type="text" name='fame[celebrityfame]' value='<%= @celebrity.celebrityfame %>'>
  <input type="text" name='substance[celebritysubstance]' value='<%= @celebrity.celebritysubstance %>'>

  <input type="submit">
</form>
