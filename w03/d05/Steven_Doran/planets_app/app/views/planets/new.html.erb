<h1>Add A New Planet</h1>

<form action="/planets" method="post">
    <%= token_tag%>
    <input type="text" name='planet[name]' placeholder='Planet Name...'><br/>
    <input type="text" name='planet[image_url]' placeholder='Image URL...'><br/>
    <input type="text" name='planet[diameter]' placeholder='Diameter in km...'><br/>
    <input type="text" name='planet[mass]' placeholder="Mass x 10^24 kg..."><br/>
    <input type="radio" name="planet[life]" value='true'>Life<br/>
    <input type="radio" name="planet[life]" value='false'>No Life<br/>
    <input type="submit">
</form>