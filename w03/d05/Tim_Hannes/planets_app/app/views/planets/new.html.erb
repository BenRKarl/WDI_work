<h1>New Planet</h1>

<div class="form">
<%= form_for :planet, url: planets_path do |f| %><% end %>
<%= link_to 'Back', planets_path %>

<%= form_for :planet, url: planets_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url %>
  </p>
  <p>
    <%= f.label :diameter %><br>
    <%= f.text_field :diameter%>
  </p>
  <p>
    <%= f.label :mass %><br>
    <%= f.text_field :mass %>
  </p>
  <p> Life? <br>
    <%= f.radio_button :life, "0" %> Yes
    <%= f.radio_button :life, "1" %> No
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>
