
<div class="planet_info">
<h1><%= @planet.planet_name %></h1>
 <img src="<%= @planet.planet_url %>">
 </br></br>
 <ul>
   <li>
     Name: <%= @planet.planet_name %>
   </li>
   <li>
     Diameter:  <%= @planet.diameter %> km
   </li>
   <li>
     Mass:  <%= @planet.mass %> kg
   </li>
   <li>
     Currently life?:
           <%= if @planet.life
           "Major Tom! There's life!"
           else
           "No life..."
            end %>
 </li>
 </ul>
 </div></br></br>
 
 <form action="/planets" method="get">
  <input type="submit" value="Back to Index">
 </form>
<br>
 <form action="/planets/<%= @planet.id %>/edit" method="get">
   <input type="submit" value="Edit this Planet">
</form>


