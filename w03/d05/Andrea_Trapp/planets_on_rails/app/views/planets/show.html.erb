<a href="/planets">
  HOME
</a>

<figure>
    <a href="<%= @planet.image_url %>">
  <img src="<%= @planet.image_url %>" width="200" height="200" alt="<%= @planet.name %>" /></a>
  <figcaption>Planet <%= @planet.name %></figcaption>
</figure>

<div>
    <tr>
        <td>Name:</td>
        <td><%= @planet.name %></td>
        <td>Diameter:</td>
        <td><%= @planet.diameter %></td>
        <td>Mass:</td>
        <td><%= @planet.mass %></td>
        <td>Life?</td>
        <td><%= @planet.life %></td>
    </tr>
</div>

<a href="/planets/<%= @planet.id %>/edit">
  Edit
</a>

<form action="/planets/<%= @planet.id %>" method='post'>
  <%= token_tag %>
  <input type="hidden" name='_method' value='delete'>
  <button type='submit'>Delete</button>
</form>

