<h1>DOGS!</h1>
<form action="/dogs/new" method="get">
  <button>
  Add dog!
  </button>
</form>


<table>
  <% @dogs.each do |dog| %>
    <tr>
      <td>
        <%= dog.username %>
      </td>
      <td>
        <form action="/dogs/<%=dog.id%>" method="get">
          <button type="submit">Show dog!</button>
        </form>
      </td>
      <td>
        <form action="/dogs/<%=dog.id%>/edit" method="get">
          <button type="submit">Edit dog!</button>
        </form>

      </td>
      <td>
        <form action="/dogs/<%=dog.id%>" method="post">
          <input type="hidden" name="_method" value="delete">
          <button type="submit">Delete Dog</button>
        </form>
      </td>
    </tr>
  <% end %>
</table>
