<h1>We Got Dogs!</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Breed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @dogs.each do |dog| %>
    <tr>
      <td>
        <%= dog.name %>
      </td>
      <td>
        <%= dog.age %>
      </td>
      <td>
        <%= dog.breed %>
      </td>
      <div class="links">
      <td>
        <form action="/dogs/<%= dog.id %>" method="get">
          <button type="submit">SHOW</button>
        </form>
      </td>
      <td>
        <form action="/dogs/<%= dog.id %>/edit" method="get">
          <button type="submit">EDIT</button>
        </form>
      </td>
      <td>
        <form action="/dogs/<%= dog.id %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <button type="submit">DELETE</button>
        </form>
      </td>
    </div>
    </tr>
  <% end %>
</tbody>
</table>

<div class="bottom_button">
<form action="/dogs/new" method="get">
<button class="add_dogs">ADD A NEW DOG</button>
</form>
</div>
