<h1>DOGGIE CRUD</h1>

<form action="/dogs/new" method="get">
  <button class="add-friend">
    Add Dog
  </button>
</form>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Breed</th>
    </tr>
  </thead>
  <% @dogs.each do |dog| %>
    <tr>
      <td class="name">
        <%= dog.name %>
      </td>
      <td class = "age">
        <%= dog.age %>
      </td>
      <td class = "breed">
        <%= dog.breed %>
      </td>
      <td>
        <form action='/dogs/<%=dog.id %>' method="get">
          <button type="submit">SHOW</button>
        </form>
      </td>
      <td>
        <form action = "/dogs/<%= dog.id%>/edit" method="get">
          <button type="submit">EDIT</button>
        </form>
      </td>
      <td>
        <form action = "/dogs/<%= dog.id %>/delete" method="post">
          <input type="hidden" name="_method" value="delete">
          <button type="submit">DELETE</button>
        </form>
      </td>
    </tr>
    <% end %>
</table>
