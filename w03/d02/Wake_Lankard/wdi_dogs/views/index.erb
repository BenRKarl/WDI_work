<h3 class="page_message"><%=@message%></h3>
<div class="container">
<table>
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Age
      </th>
      <th>
        Breed
      </th>
    </tr>
  </thead>
  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td>
          <%= dog.name %>
        </td>
        <td class="age">
          <%= dog.age %>
        </td>
        <td>
          <%= dog.breed %>
        </td>
        <td class="button">
          <form action="/dogs/<%=dog.id%>">
            <button type="submit">SHOW</button>
          </form>
        </td>
        <td class="button">
          <form action="/dogs/<%=dog.id%>/edit">
            <button type="submit">EDIT</button>
          </form>
        </td>
        <td class="button">
          <form action="/dogs/<%=dog.id%>" method="post">
            <input type="hidden" name="_method" value="delete">
            <button type="submit">DELETE</button>
          </form>
        </td>
      </tr>
      <% end %>
    </tbody>
    </table>
    <a href="/dogs/new">Add a Dog >></a>
  </div><!--container-->
