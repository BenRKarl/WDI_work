<%= form_tag '/emails', method: 'post' do %>
  <%= text_field_tag :url %>
  <%= submit_tag 'Find Emails' %>
<% end %>

<table>
  <% @emails.each do |email| %>
    <tr>
      <td><%= email.email %></td>
      <td>
        <ul>
          <% person.sites.each do |site| %>
            <li><%= site.url %></li>
          <% end %>
        </ul>
      </td>
    </tr>
  <% end %>
</table>

