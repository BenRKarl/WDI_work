<%= form_tag '/people', method: 'post' do %>
  <% text_field_tag :url %>
  <% submit_tag 'Find Emails' %>
  <% end %>

  <table>
    <%= @emails.each do |email| %>
    <tr>
      <td><%= email.address %></td>
      <td>
        <ul>
          <%= email.websites.each do |site| %>
          <li><%= site.url %></li>
          <%= end %>
        </ul>
       
      </td>
     </tr>
    <%= end %>
  </table>