<h1>New Planet Input Interface</h1>

<form action="/planets" method="post">
  <%= token_tag %>
  <p>
    Planet Designation:  <input type="text" name="[planet]name">
  </p>
  <p>
    Image URL: <input type="text" name="planet[image_url]">
  </p>
  <p>
    Mass: <input type="number" name="planet[mass]">
  </p>
  <p>
    Diameter: <input type="number" name="planet[diameter]">
  </p>
  <p>
    Life: <input type="radio" name="planet[life]" value="true">Affirmative</br>
    <input type="radio" name="planet[life]" value="false">Negative
  </p>
  <p>
    <input type="submit" value="submit">
  </p>
</form>