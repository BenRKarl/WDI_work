<a href="/planets">Back to main</a>

<h1>About <%= @planet.name %></h1>

<img src='<%= @planet.image_url %>' />

<table>
  <tr>
    <td>Diameter (km)</td>
    <td>Mass (x 10**21 kg)</td>
    <td>Life</td>
    <td>Moons</td>
  </tr>

  <tr>
    <td><%= @planet.diameter %></td>
    <td><%= @planet.mass %></td>
    <td><%= @planet.life %></td>
    <td>
      <% @planet.moons.each do |moon| %>
        <%= moon.name %> &nbsp;
        <a href="/planets/<%= @planet.id %>/moons/<%= moon.id %>/edit" class='moon_edit'>
        Edit</a> &nbsp;
        
        <form action='/planets/<%= @planet.id %>/moons/<%= moon.id %>' method='post' class='moon_del'>
          <input type='hidden' name='_method' value='delete'>
          <input type='submit' value='Del'>
        </form> <br/>
      <% end %>  
    </td>
  </tr>
</table>

<a href="/planets/<%= @planet.id %>/moons/new">
  <button>Add moon</button></a>

<a href="/planets/<%= @planet.id %>/edit">
  <button>Edit</button>
</a>

<form action='/planets/<%= @planet.id %>' method='post'>
  <input type='hidden' name='_method' value='delete'>
  <input type='submit' value='Destroy'>
</form>
