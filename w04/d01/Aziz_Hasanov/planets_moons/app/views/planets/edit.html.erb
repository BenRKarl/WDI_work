<form action="/planets/<%=@edit_planet.id%>" method="post">
<%= token_tag %>
  <input type="hidden" name="_method" value="put" />
  <input type="text" name="planet[name]" placeholder="<%= @edit_planet.name %>">
  <input type="text" name="planet[image_url]" placeholder="<%= @edit_planet.image_url %>">
  <input type="text" name="planet[diameter]" placeholder="<%= @edit_planet.diameter %>">
  <input type="text" name="planet[mass]" placeholder="<%= @edit_planet.mass %>">
  <input type="text" name="planet[life]" placeholder="<%= @edit_planet.life %>">
  <input type="submit">
</form>