<div class="container">
  <div class="sixteen columns">
    <h1 >Planets and their Moons</h1>
    <a href="/planets/new"><button>Create a new planet</button></a>
  </div>
  <div class="row"></div>
  <div class="sixteen columns">
  <div class="sixteen columns" id="index">
    <ul>
      <% @planets.each do |planet| %>
      <li>
        <a href='/planets/<%= planet.id %>'><%= planet.name %></a>
        <ul>
          <% planet.moons.each do |moon| %>
          <li>
            <%= moon.name %>
          </li>
          <% end %>
        </ul>
      </li>
      <% end %>
    </ul>
  </div>
</div>
</div>
