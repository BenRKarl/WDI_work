<h1>Planets 'N Moons</h1>


<table>
  <tr>
    <th>Planet Image</th>
    <th>Planet Name</th>
    <th>Planet Mass</th>
    <th>Planet Diameter</th>
    <th>Does it have life?</th>
    <th>List of Moons</th>
    <th>Options</th>
  </tr>
<% @planets.each do |planet| %>
  <tr>
    <td><img src="<%= planet.image_url %>"></td>
    <td><a href="/planets/<%= planet.id %>"><%= planet.name %></a></td>
    <td>~ <%= planet.mass %> Earths</td>
    <td>~ <%= planet.diameter %> Earths</td>
    <td>
        <% if planet.life %>
        There's life!
        <% else %>
        No life...
        <% end %>
    </td>
    <td>
        <% planet.moons.each do |moon| %>
          <p>
          <%= moon.name %>
          </p>
        <% end %>
    </td>
    <td>
      <%= form_tag(edit_planet_path(planet), method: "get") do %>
        <%= submit_tag "Edit Planet" %>
      <% end %>
      <%= form_tag(planet_path(planet), method: "delete") do %>
        <%= submit_tag "Delete Planet" %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

</br>

<%= form_tag(new_planet_path, method: "get") do %>
<%= submit_tag "Create new Planet" %>
<% end %>
