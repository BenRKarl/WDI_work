
<div class="container">
    <div class="four columns offset-by-one">

        <form action="<%= edit_planet_path(@planet.id)%>" method="get">
          <button class="show_but" type="submit">Edit</button>
        </form>
        <form action="/planets/<%= @planet.id %>" method="post">
          <%= token_tag %>
          <input type="hidden" name="_method" value="delete">
          <button class="show_but" type="submit">Delete</button>
        </form>
        <form action="/planets/<%=@planet.id%>/moons/new" method="get">
          <button class="show_but" type="submit">Create Moon</button>
        </form>
        <form action="<%= new_planet_path%>" method="get">
          <button class="show_but" type="submit">Create New Planet</button>
        </form>
        <form action="<%= planets_path %>" method="get">
          <button class="show_but" type="submit">Back</button>
        </form>
    </div>
    <div class="eight columns omega">
            <%= @planet.name.upcase %>
        <img class="planet_img" src="<%=@planet.image_url%>">
            <ul>
              <li>
                <%= @message %>
              </li>
              <li>
                <%= @diam %>
              </li>
              <li>
                <%= @planet.to_s %>
              </li>
            </ul>
              Moons: <i class="fa fa-coffee"></i>
                <ul>
                    <% @planet.moons.each do |moon| %>
                        <li>
                            <a href="/planets/<%=@planet.id%>/moons/<%=moon.id%>/edit"><%=moon.name%></a>
                        </li>
                    <% end %>
                </ul>
      </div>
</div>
